<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.curelei.kraller.gui.KrallerApp">

    <top>
        <Label text="Allergene" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    </top>

    <left>
        <VBox spacing="10">
            <Button text="Kategorien" onAction="#oeffneKategorieFenster"/>
            <Button text="Weiteres" onAction="#oeffneWeiteresFenster"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Bezeichnung" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <TableView fx:id="tableView" prefHeight="200" prefWidth="300"/>
        </VBox>
    </center>

</BorderPane>